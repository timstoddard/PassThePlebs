{
  "env": {
    "browser": true,
    "jquery": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended"
  ],
  "globals": {
    "chrome": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "class-methods-use-this": "off",
    "comma-dangle": ["error", {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "ignore"
    }],
    "eqeqeq": "error",
    "import/no-extraneous-dependencies": "off",
    "no-multi-assign": "off",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "prefer-destructuring": ["error",
      { "array": false, "object": true },
      { "enforceForRenamedProperties": false }
    ]
  }
}